<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="ticket_view_form" model="ir.ui.view">
            <field name="name">ticket.view.form</field>
            <field name="model">mt.ticket</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Tickets">
                    <header>
                        <button name="make_sale" type="object" state="draft" string="Make Sale" class="oe_highlight" attrs="{'invisible': ['|',('is_invoice_created', '=', True),('is_purchased', '=', False)]}"/>
                        <button name="make_purchase" type="object" state="draft" string="Make Purchase" class="oe_highlight" attrs="{'invisible': [('is_purchased', '!=', False)]}"/>
                        <field name="state" widget="statusbar" />
                        <button name="make_done" type="object" state="draft" string="Make Done" class="oe_highlight" attrs="{'invisible': ['|', '|',('is_invoice_created', '=', False),('is_purchased', '=', False),('state', '!=', 'draft')]}"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="ticket_type"/>
                                <field name="airline_name"  attrs="{'invisible': [('ticket_type', '!=', 'flight')]}"/>
                                <field name="airline_code"  attrs="{'invisible': [('ticket_type', '!=', 'flight')]}"/>
                                <field name="e_ticket"  attrs="{'invisible': [('ticket_type', '!=', 'flight')]}"/>
                                <field name="hotel_name"  attrs="{'invisible': [('ticket_type', '=', 'flight')]}"/>
                                <field name="booking_code"  attrs="{'invisible': [('ticket_type', '=', 'flight')]}"/>
                            </group>
                            <group>
                                <field name="sale_price"/>
                                <field name="payment_type"/>
                                <field name="payment_term_id" attrs="{'invisible': [('payment_type', '!=', 'credit')], 'required': [('payment_type', '=', 'credit')]}"/>
                                <field name="purchase_price"/>
                                
                                <field name="is_purchased" invisible="1"/>
                                <field  name="is_invoice_created" invisible="1"/>
                            </group>
                        </group>
                    
                        <group>
                            <notebook>
                                <page string="Expenses">
                                    <field name="expense_ids" context="{'ticket_id': id}">
                                        <tree string="Expenses">
                                            <field name="personal" invisible="1"/>
                                            <field name="name"/>
                                            <field name="expense_type" widget="selection" domain="[('personal', '=', False)]"/>
                                            <field name="amount"/>
                                            <field name="state"/>
                                            <field name="insurance_invoiced" invisible="1"/>
                                            <field name="expense_type_name" invisible="1"/>
                                            <field name="ticket_id" invisible="1"/>
                                            <button name="issue_invoice_from_model" type="object" string="Create Insurance Invoice" class="oe_highlight" attrs="{'invisible': ['|',('expense_type_name','!=', 'Insurance'),('insurance_invoiced','=', True)]}" context="{'ticket_id': ticket_id}"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Invoices">
                                    <field name="invoice_ids">
                                        <tree string="Invoices">
                                            <field name="name"/>
                                            <field name="amount_total"/>
                                            <field name="state"/>
                                            <field name="date_due"/>
                                        </tree>
                                    </field>
                                </page>

                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mt_ticket_tree_view" model="ir.ui.view">
            <field name="name">mt.ticket.tree</field>
            <field name="model">mt.ticket</field>
            <field name="arch" type="xml">
                <tree string="Ticket">
                   <field name="name"/>
                   <field name="ticket_type"/>
                   <field name="sale_price"/>
                   <field name="purchase_price"/>
                   <field name="state"/>
               </tree>
            </field>
        </record>

        <record id="mt_ticket_search_view" model="ir.ui.view">
            <field name="name">mt.ticket.search</field>
            <field name="model">mt.ticket</field>
            <field name="arch" type="xml">
                <search string="Search Ticket">
                    <field name="name"/>
                   <field name="partner_id"/>
                   <!-- <field name="partner_id"/> -->
                   <group expand="0" name="group_by" string="Group By">
                       <filter name="name" string="Name" domain="[]" context="{'group_by' : 'name'}" />
                   </group>
               </search>
            </field>
        </record>


        <record id="action_ticket_open" model="ir.actions.act_window">
             <field name="name">Ticket</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">mt.ticket</field>
             <field name="view_mode">tree,form</field>
             <field name="view_type">form</field>
             <field name="view_id" ref="mt_ticket.mt_ticket_tree_view"/>
             <field name="search_view_id" ref="mt_ticket.mt_ticket_search_view"/>
             <!-- <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1}</field> -->
             <field name="help" type="html">
                 <p class="o_view_nocontent_smiling_face">
                     ...
                 </p><p>
                     ...
                 </p>
             </field>
         </record>
         <menuitem id="menu_ticket_open" name="Tickets" action="action_ticket_open" parent="mail.menu_root_discuss" sequence="35" groups="mt_trip.mt_group_ticket"/>
    </data>
</odoo>
