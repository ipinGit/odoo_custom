<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="document_type_config_form_view" model="ir.ui.view">
            <field name="name">document.type.config.form.view</field>
            <field name="model">document.type.config</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Document Type">
                    <group>
                        <field name="sequence"/>
                        <field name="name"/>
                        <field name="is_image"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="document_type_config_tree_view" model="ir.ui.view">
            <field name="name">document.type.config.tree.view</field>
            <field name="model">document.type.config</field>
            <field name="arch" type="xml">
                <tree string="Document Type" editable="bottom">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="is_image"/>
               </tree>
            </field>
        </record>

        <record id="document_type_config_search_view" model="ir.ui.view">
            <field name="name">document.type.config.search.view</field>
            <field name="model">document.type.config</field>
            <field name="arch" type="xml">
                <search string="Search Type">
                   <field name="name"/>
                   <!-- <field name="partner_id"/> -->
                   <group expand="0" name="group_by" string="Group By">
                       <filter name="name" string="Name" domain="[]" context="{'group_by' : 'name'}" />
                   </group>
               </search>
            </field>
        </record>

        <record id="action_document_type_config_open" model="ir.actions.act_window">
             <field name="name">Document Type Config</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">document.type.config</field>
             <field name="view_mode">tree,form</field>
             <field name="view_type">form</field>
             <field name="view_id" ref="mt_config.document_type_config_tree_view"/>
             <field name="search_view_id" ref="mt_config.document_type_config_search_view"/>
             <!-- <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1}</field> -->
         </record>



        <menuitem id="mt_config_menu" name="Configuration" parent="mail.menu_root_discuss" sequence="999" groups="base.group_no_one"/>
        <menuitem id="menu_document_type_config" name="Document Type" action="action_document_type_config_open" parent="mt_config.mt_config_menu" sequence="10" groups="base.group_no_one"/>

    </data>
</odoo>