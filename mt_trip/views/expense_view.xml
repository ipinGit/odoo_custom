<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="expense_view_form" model="ir.ui.view">
            <field name="name">trip.view.form</field>
            <field name="model">trip.expense</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Expenses">
                    <header>
                        <button name="button_confirm" string="Confirm" type="object" attrs="{'invisible': [('state','not in',[False, 'draft', 'open', 'in_payment'])]}" class="oe_highlight"/>
                        <button name="assign_hotel" string="Assign Hotel" type="object" attrs="{'invisible': ['|', ('state','not in',['paid']), ('expense_type', '!=', 'hotel')]}" class="oe_highlight"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="expense_type"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="ticket_code" attrs="{'invisible': [('expense_type','not in',['hotel'])]}"/>
                                <field name="people" attrs="{'invisible': [('expense_type','!=','hotel')]}"/>
                            </group>
                        </group>
                    </sheet>
                                        
                </form>
            </field>
        </record>
    </data>
</odoo>
