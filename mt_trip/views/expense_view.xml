<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="expense_view_form" model="ir.ui.view">
            <field name="name">trip.view.form</field>
            <field name="model">trip.expense</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Expenses">
                    <header>
                        <field name="trip_id" invisible="1"/>
                        <button name="button_confirm" string="Confirm" type="object" attrs="{'invisible': [('invoice_id', '!=', False)]}" class="oe_highlight" context="{'trip_id': trip_id}"/>
                        <button name="action_invoice_show" string="Show Invoice" type="object" attrs="{'invisible': [('invoice_id', '=', False)]}"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <field name="personal" invisible="1"/>
                            <group>
                                <field name="name"/>
                                <field name="amount"/>
                                <field name="expense_type" widget="selection"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                            <group attrs="{'invisible': [('personal','=', False)]}">
                                <field name="partner_id"/>
                                <field name="dtof_birth"/>
                                <field name="ktp_no"/>
                                <field name="passport_no" />
                                <field name="passport_exp"/>
                                <field name="passport_issued"/>
                                <field name="code"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Passport" attrs="{'invisible': [('personal','=',False)]}">
                                <field name="passport_img" widget='image' options='{"size": [500, 500]}'/>
                            </page>
                        </notebook>
                    </sheet>
                                        
                </form>
            </field>
        </record>
    </data>
</odoo>
