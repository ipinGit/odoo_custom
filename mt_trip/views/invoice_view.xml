<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_invoice_payment_proof_id" model="ir.ui.view">
            <field name="name">account.invoice.payment.prove.view</field>
            <field name="model">account.invoice</field>
            <field name="priority">100</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <!-- <field name="groups_id" eval="[(5,)]"/> -->
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']" position="after">
                    <page string="Payment Proofs">
                        <group>
                            <!-- <field name="is_image" invisible="1"/> -->
                            <field name="payment_proof_ids">
                                <tree string="Payment Proofs">
                                    <field name="name"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </group>
                        <!-- <field name="payment_proof_img" widget='image' options='{"size": [500, 500]}'/> -->
                    </page>
                </xpath>
                
                <field name="cash_rounding_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                
            </field>
        </record>
        <record id="view_invoice_payment_item_id" model="ir.ui.view">
            <field name="name">account.invoice.line.item.view</field>
            <field name="model">account.invoice</field>
            <field name="priority">101</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <!-- <field name="groups_id" eval="[(5,)]"/> -->
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="invoice_item"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    
                </xpath>
                
            </field>
        </record>

        <record id="view_form_payment_proof_id" model="ir.ui.view">
            <field name="name">invoice.payment.proof</field>
            <field name="model">payment.proof</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Payment Proof">
                    <group>
                        <field name="name"/>
                        <field name="create_date"/>
                        <field name="payment_proof"/>
                        <field name="payment_proof_img" widget='image' options='{"size": [500, 500]}'/> 
                    </group>
                </form>
            </field>
        </record>

        <record id="view_register_payment_invoice_proof" model="ir.ui.view">
            <field name="name">account.payment.invoice.proof</field>
            <field name="model">account.payment</field>
            <field name="priority">102</field>
            <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="is_downpayment" invisible="1"/>
                    <field name="payment_proof" attrs="{'invisible': ['|', ('payment_type','=','outbound'), ('is_downpayment', '=', True)]}"/>
                </field>
                
            </field>

        </record>

</data></odoo>