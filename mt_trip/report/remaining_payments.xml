<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="trip_remaining_payment_report">
            <!-- BEGIN COPY HERE -->
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.env.user.sudo().lang"/>
                    <t t-call="web.external_layout">
                        <t t-set="o" t-value="o.with_context(lang=lang)" />
                        <div class="page">
                            <h2>
                                Member Payment Summary : <span t-field="o.name"></span>
                            </h2>
                            <table class="table table-sm o_main_table" name="member_list_table">
                                <thead>
                                    <th class="text-left"><span>No.</span></th>
                                    <th class="text-left"><span>GEN</span></th>
                                    <th class="text-left"><span>Name</span></th>
                                    <th class="text-left"><span>Birth Date</span></th>
                                    <th class="text-left"><span>Passport</span></th>
                                    <!-- <th class="text-left"><span>Exp.</span></th> -->
                                    <th class="text-left"><span>Total Invoice</span></th>
                                    <th class="text-left"><span>Total Paid</span></th>
                                </thead>
                                <tbody class="member_list_tbody">
                                    <t t-set="line_no" t-value="1"/>
                                    <t t-foreach="o.member_ids" t-as="line">
                                        <tr>
                                            <td class="text-left" > <span><t t-esc="line_no"/></span></td>
                                            <td class="text-left"><span t-field="line.partner_id.gender"></span></td>
                                            <td class="text-left"><span t-field="line.partner_id.name"></span></td>
                                            <td class="text-left"><span t-field="line.partner_id.dtof_birth"></span></td>
                                            <td class="text-left"><span t-field="line.partner_id.passport_no"></span></td>
                                            <!-- <td class="text-left"><span t-field="line.partner_id.passport_exp"></span></td> -->
                                            <t t-set="total_invoice" t-value="0"/>
                                            <t t-set="total_invoice_paid" t-value="0"/>

                                            <t t-foreach="line.invoice_ids" t-as="inv">
                                                <t t-if="inv.state == 'paid'">
                                                    <t t-set= "total_invoice_paid" t-value="total_invoice_paid + inv.amount_total"/>
                                                </t>
                                                <t t-if="inv.state != 'paid'">
                                                    <t t-set="total_invoice" t-value="total_invoice + inv.amount_total"/>
                                                </t>
                                            </t>

                                            <td class="text-left">
                                                <span t-esc="total_invoice"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    ></span></td>
                                            <td class="text-left">
                                                <span t-esc="total_invoice_paid"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                ></span></td>
                                        </tr>
                                        <t t-set="line_no" t-value="line_no + 1"/>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                    </t>
                </t>
            </t>
        <!-- END OF COPY -->
        </template>
    </data>
</odoo>
    